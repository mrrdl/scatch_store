<%- include('./partials/header') %>

<% if (error.length > 0) { %>
    <!-- Error Message (if applicable) -->
    <div class="absolute top-5 left-1/2 transform -translate-x-1/2 bg-red-500 text-white p-3 rounded-md shadow-lg">
        <span><%= error %></span>
    </div>
<% } %>

<!-- Main Wrapper -->
<div class="w-full h-screen flex items-center justify-between px-20">
    <!-- Registration Section -->
    <div class="w-1/2 flex items-center justify-center h-full">
        <div class="w-full px-20">
            <h3 class="text-4xl mb-4">Welcome to <span class="text-blue-500 font-semibold">Scatch</span></h3>
            <h4 class="text-2xl mb-8">Create your account</h4>
            <form autocomplete="on" action="/users/register" method="post">
                <!-- Full Name -->
                <input
                    class="bg-gray-100 block w-full px-4 py-3 border rounded-md mb-4 border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    type="text" placeholder="Full Name" name="fullname" required>
                <!-- Email -->
                <input
                    class="bg-gray-100 block w-full px-4 py-3 border rounded-md mb-4 border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    type="email" placeholder="Email" name="email" required>
                <!-- Password -->
                <input
                    class="bg-gray-100 block w-full px-4 py-3 border rounded-md mb-4 border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    type="password" placeholder="Password" name="password" required>
                <!-- Submit Button -->
                <input class="w-full bg-blue-500 hover:bg-blue-600 text-white py-3 rounded-full cursor-pointer transition duration-300 ease-in-out"
                    type="submit" value="Create My Account">
            </form>
            <div class="mt-6">
                <a href="/owners/create" class="text-gray-500 hover:text-blue-500 transition text-lg">
                    Are You an Owner?
                </a>
            </div>
        </div>
    </div>

    <!-- Login Section -->
    <div class="w-1/2 flex items-center justify-center h-full">
        <div class="w-full px-20">
            <h4 class="text-2xl mb-8 capitalize">Login to your account</h4>
            <form autocomplete="off" action="/users/login" method="post">
                <!-- Email -->
                <input
                    class="bg-gray-100 block w-full px-4 py-3 border rounded-md mb-4 border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    type="email" placeholder="Email" name="email" required>
                <!-- Password -->
                <input
                    class="bg-gray-100 block w-full px-4 py-3 border rounded-md mb-4 border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    type="password" placeholder="Password" name="password" required>
                <!-- Submit Button -->
                <input class="w-full bg-blue-500 hover:bg-blue-600 text-white py-3 rounded-full cursor-pointer transition duration-300 ease-in-out"
                    type="submit" value="Login">
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
